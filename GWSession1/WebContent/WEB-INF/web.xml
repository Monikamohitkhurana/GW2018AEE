<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>GWSession1</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>MyServlet</servlet-name>
    <servlet-class>com.aurbises.controller.HomeServlet</servlet-class>
    <init-param>
      <param-name>appName</param-name>
      <param-value>Appie</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>MyServlet</servlet-name>
    <url-pattern>/Auribises</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>YourFilter</filter-name>
    <filter-class>com.aurbises.controller.MyFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>YourFilter</filter-name>
    <url-pattern>/Auribises</url-pattern>
  </filter-mapping>
  <context-param>
    <param-name>pi</param-name>
    <param-value>3.14</param-value>
  </context-param>
</web-app>